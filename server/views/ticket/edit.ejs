
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
<form class="form-horizontal" method="post" action="/ticket/<%= ticket._id %>" enctype="multipart/form-data" >
  <fieldset>
    <legend>Edit your ticket!</legend>
    <div class="well">
    <div class="form-group">
      <label for="titleEdit" class="col-lg-2 control-label">Title</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="titleEdit" name="title" value="<%= ticket.title %>">
      </div>
    </div>

    <div class="form-group">
      <label for="textArea" class="col-lg-2 control-label">Content</label>
      <div class="col-lg-10">
        <textarea class="form-control" rows="4" name="content" id="contentEdit"><%= ticket.content %></textarea>
        <span class="help-block">Edit your issue description here</span>
      </div>
    </div>

    <div class="form-group">
      <label for="select" class="col-lg-2 control-label">Tags</label>
      <div class="col-lg-10">
        <select class="form-control" name="tags" id="tagsEdit">
          <option selected><%= ticket.tags %></option>
          <option>CSS</option>
          <option>Node</option>
          <option>Html</option>
          <option>JS</option>
        </select>
      </div>
    </div>


    <div class="form-group">
      <label for="select" class="col-lg-2 control-label">Screenshot</label>
      <div class="col-lg-10">
        <input type="file" name="editPhoto">

        <% if (ticket.image != "nofile" || ticket.image == undefined ) { %>
          <img src="/uploads/<%=ticket.image %>" class="img-responsive img-thumbnail imgdetails" >

        <% } %>

      </div>
    </div>


    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-lg btn-success">Save</button>
        <button type="reset" class="btn btn-lg btn-danger">Reset</button>


      </div>
    </div>


    </div>
  </fieldset>
</form>
</div>
</div>
</div>
